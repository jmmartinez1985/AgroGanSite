@model AgroGanSite.Models.NEW_Noticias

@{
    ViewBag.Title = "Noticia";
}


<h2></h2>
<div class="container-fluid pageProducts">
    <div class="row-fluid public-share ">

        <div class="rowfluid">
            <div class="span12">
                <h4>@Model.NEW_Titulo</h4>
            </div>
        </div>


        <div class="rowfluid">
            <div class="span4">
                <img class="img-rounded imgNew" width="300" height="400"  style="height:500px" src='@Url.Content(Model.NEW_Imagen)'>
            </div>

            <div class="span8">'

               @{
                   var value = new HtmlString(Model.NEW_HTML);
                   <p>@value</p>
                   }
            </div>

        </div>
    </div>
</div>

<script>
    var $j = jQuery.noConflict();
    $j(function () {
        var urlHelper = new UrlHelper();
        var img = '@Model.NEW_Imagen';
        img = urlHelper.urlImage(img);
        $j(".imgNew").attr('src', img);
    });

</script>
