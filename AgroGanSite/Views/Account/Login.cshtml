@model AgroGanSite.Models.LoginModel

@{
    ViewBag.Title = "Sesión";
}
<script src="~/Scripts/Bootstrap/bootstrap-collapse.js"></script>
@*<link href="~/Content/bootstrap-helper.css" rel="stylesheet" />*@


<div class="breadcrumbs margin-bottom-50">
    <div class="container">
        <h3 class="color-blue pull-left">Sitio para Clientes y Administrativos</h3>
        <ul class="pull-right breadcrumb">
            <li><a href="index.html">Home</a> <span class="divider">/</span></li>
            <li><a href="#">Pages</a> <span class="divider">/</span></li>
            <li class="active">Login</li>
        </ul>
    </div>
    <!--/container-->
</div>
<!--/breadcrumbs-->

<div class="container">
    <div class="row-fluid">
        <div class="span12">
            <div class="log-page">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <h3>Login to your account</h3>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Email", @class = "span12" })
                        <br />
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "span12" })
                        <br />
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="controls form-inline">
                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            Stay Signed in</label>
                        @* <button class="btn-u pull-right" type="submit">Login</button>*@
                        <input class="btn-u pull-right" type="submit" value="Log in" />
                    </div>
                    <hr />
                    <h4>Forget your Password ?</h4>
                    <p>no worries, <a class="color-green" href="#">click here</a> to reset your password.</p>
                    <p>
                        @Html.ActionLink("Register", "Register") if you don't have an account.
                    </p> }
            </div>

        </div>

    </div>
    <!--/row-fluid-->

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
