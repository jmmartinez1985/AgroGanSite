@model AgroGanSite.Models.LoginModel

@{
    ViewBag.Title = "Incio de Sesión";
}
<script src="~/Scripts/Bootstrap/bootstrap-collapse.js"></script>
@*<link href="~/Content/bootstrap-helper.css" rel="stylesheet" />*@


<div class="breadcrumbs margin-bottom-10">
    <div class="container">
    <div class="row-fluid">
        <h3 class="color-blue pull-left">Sitio para Clientes y Administrativos</h3>
        <ul class="pull-right breadcrumb">
            <li><a href="#">Inicio</a> <span class="divider">/</span></li>
            <li><a href="@Url.Action("Index", "Home")" >Página</a> <span class="divider">/</span></li>
            <li class="active">Sesión</li>
        </ul>
    </div></div>
    <!--/container-->
</div>
<!--/breadcrumbs-->

<div class="container">
    <div class="row-fluid">
        <div class="span12">
            <div class="log-page">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <h3>Inicie a su cuenta</h3>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Usuario", @class = "span12" })
                        <br />
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Contraseña", @class = "span12" })
                        <br />
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="controls form-inline">
                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            Mantenerse contectado</label>
                        @* <button class="btn-u pull-right" type="submit">Login</button>*@
                        <input class="btn-u pull-right" type="submit" value="Log in" />
                    </div>
                    <hr />
                    <h4>Olvidó su contraseña ?</h4>
                    <p>No te preocupes, <a class="color-green" href="@Url.Action("ForgotPassword", "Account")">Haz click aquí</a> para recuperar tu contraseña.</p>
                    <p>
                        @Html.ActionLink("Registrate", "Register") Sí aún no tienes una cuenta.
                    </p> }
            </div>

        </div>

    </div>
    <!--/row-fluid-->

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
