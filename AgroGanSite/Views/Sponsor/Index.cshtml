                                                @*  <td>@Html.ActionLink("Details", "Details", new { prod = item.PRO_Id }, new { @class = "btn btn-warning" }) </td>*@
                                                <td>

                                                    <a class="btn btn-danger" onclick="deleteSponsor('@item.PTC_Id')" >Borrar</a>


                                                </td>
                                            </tr>
                                        </table>

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PTC_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PTC_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PTC_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PTC_Url)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PTC_Imagen)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.STS_Status.STS_Descripcion)
                                    </th>

                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="8">
                                    <div class="holder" style="float: left">
                                    </div>
                                </td>
                            </tr>
                        </tfoot>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
