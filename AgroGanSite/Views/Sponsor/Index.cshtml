@model IEnumerable<AgroGanSite.Models.PTC_Patrocinadores>

@{
    ViewBag.Title = "Patrocinadores";
}


<link href="@Url.Content("~/Content/jpages/jPages.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jpages/animate.css")" rel="stylesheet" type="text/css" />
@*<link href="@Url.Content("~/Content/jpages/style.css")" rel="stylesheet" type="text/css" />*@
<script src="@Url.Content("~/Scripts/jpage/jPages.min.js")" type="text/javascript"></script>

<script>
    var $j = jQuery.noConflict();
    $j(function () {
        $j("div.holder").jPages({
            containerID: "spondiv",
            //              previous: "←",
            //              next: "→",
            first: "first",
            previous: "previous",
            next: "next",
            last: "last",
            perPage: 5,
            delay: 20
        });
    });


    function deleteSponsor(id) {
        jConfirm('Desea borrar este patrocinador?', 'Borrar patrocinador existente', function (confirmed) {
            if (confirmed) {
                jQuery.ajax(
               {
                   type: 'post',
                   url: '@Url.Content("~/Sponsor/Delete/")',
                   data: { id: id },
                   success: function (data) {
                       jAlert('Registro borrado satistafactoriamente.');
                       window.location = data.redirectToUrl;
                   },
                   error: function (a, b, c) {
                       alert(a);
                   }
               });
           }
        });

   }
  </script>


<div class="breadcrumbs margin-bottom-50">
    <div class="container">
        <h3 class="color-blue pull-left">Listado de Proveedores</h3>
        <ul class="pull-right breadcrumb">
            <li><a href="index.html">Home</a> <span class="divider">/</span></li>
            <li><a href="@Url.Action("Index", "Home")" >Pages</a> <span class="divider">/</span></li>
            <li class="active">Proveedores</li>
        </ul>
    </div>
    <!--/container-->
</div>
<div class="container">
    <div class="row-fluid">

        <div class="span3">
            <div class="headline">
                <h3>Operaciones</h3>
            </div>
            <div>
                @Html.ActionLink("Volver a Patrocinadores", "Index", "Sponsor")
            </div>
            <br />
            <div>
                @Html.ActionLink("Crear nuevo", "Create", "Sponsor")
            </div>

        </div>

        <div class="span9">

            <div class="another-page">
                <h3>Listado</h3>
                <div class="successmessage">
                </div>



                @*  <p>
                @Html.ActionLink("Create New", "Create")
            </p>*@

                <div style="overflow: scroll; width: 100%">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="text-align: center">Administración</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PTC_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PTC_Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PTC_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PTC_Url)
                                </th>
                                <th>
